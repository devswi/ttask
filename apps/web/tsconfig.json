{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "assets/*": ["./public/static/*"],
      "@app/*": ["./src/app/*"],
      "@styles/*": ["./src/styles/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"],
      "@features/*": ["./src/features/*"],
      "@models": ["./src/models"],
      "@components/*": ["./src/components/*"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src", "types/*.d.ts", "public/**/*.ts"]
}
